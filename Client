#include <iostream>
#include <cstring>
#include <sys/socket.h>
#include <arpa/inet.h>
#include <unistd.h>

#define PORT 8080

int main() {
    int sock = 0;
    struct sockaddr_in serv_addr;
    const char *ping = "ping";
    char buffer[1024] = {0};

    if ((sock = socket(AF_INET, SOCK_STREAM, 0)) < 0) {
        std::cout << "Erreur de création du socket" << std::endl;
        return -1;
    }

    serv_addr.sin_family = AF_INET;
    serv_addr.sin_port = htons(PORT);

    // Convertir l'adresse IPv4 de textuelle à binaire
    if(inet_pton(AF_INET, "127.0.0.1", &serv_addr.sin_addr) <= 0) {
        std::cout << "Adresse invalide ou non supportée" << std::endl;
        return -1;
    }

    // Se connecter au serveur
    if (connect(sock, (struct sockaddr *)&serv_addr, sizeof(serv_addr)) < 0) {
        std::cout << "Connexion échouée" << std::endl;
        return -1;
    }

    // Envoyer "ping" au serveur
    send(sock, ping, strlen(ping), 0);
    std::cout << "Ping envoyé" << std::endl;

    // Lire la réponse du serveur
    read(sock, buffer, 1024);
    std::cout << "Réponse reçue: " << buffer << std::endl;

    close(sock);
    return 0;
}
